<SteerBenchTestCase>
  <header>
    <version>1.0</version>
    <name>group-test</name>
    <worldBounds>
      <xmin>-100</xmin>
      <xmax>100</xmax>
      <ymin>0</ymin>
      <ymax>0</ymax>
      <zmin>-100</zmin>
      <zmax>100</zmax>
    </worldBounds>
  </header>
  
  <obstacle>
    <xmin>-20</xmin>
    <xmax>20</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>1.25</zmin>
    <zmax>3</zmax>
  </obstacle>

  <obstacle>
    <xmin>-20</xmin>
    <xmax>20</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>-3</zmin>
    <zmax>-1.25</zmax>
  </obstacle>
  
  <agent>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>3</x> <y>0</y> <z>-0.5</z> </position>
      <speed>0</speed>
    </initialConditions>
    <goalSequence>
      <seekStaticTarget>
        <targetLocation> <x>8</x> <y>0</y> <z>0</z> </targetLocation>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </seekStaticTarget>
    </goalSequence>
    <bag>false</bag>
  </agent>
    
  <agent>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>9</x> <y>0</y> <z>-0.5</z> </position>
      <speed>0</speed>
      <groupId>1</groupId>
    </initialConditions>
    <goalSequence>
      <seekStaticTarget>
        <targetLocation> <x>4</x> <y>0</y> <z>0</z> </targetLocation>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </seekStaticTarget>
    </goalSequence>
    <bag>false</bag>
  </agent>
  
  <agent>
    <initialConditions>
      <radius>0.2</radius>
      <position> <x>9.5</x> <y>0</y> <z>-0.5</z> </position>
      <speed>0</speed>
    </initialConditions>
    <goalSequence>
      <seekDynamicTarget>
        <targetName>1</targetName>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </seekDynamicTarget>
    </goalSequence>
    <bag>true</bag>
  </agent>
</SteerBenchTestCase>
